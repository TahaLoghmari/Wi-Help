# Copy this file to .env and fill in your actual values

ASPNETCORE_ENVIRONMENT=Development

DB_HOST=db
DB_NAME=wi-help
DB_USER=postgres
DB_PASSWORD=YOUR_DB_PASSWORD
DB_PORT=5432
# Database Connection
ConnectionStrings__DefaultConnection=Host=${DB_HOST};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};Port=${DB_PORT}

# JWT Settings
Jwt__Key=YOUR_JWT_SECRET_KEY_HERE
Jwt__Issuer=http://localhost:5000
Jwt__Audience=http://localhost:5173
Jwt__ExpirationInMinutes=15
Jwt__RefreshTokenExpirationDays=30

# Google OAuth
Google__ClientId=YOUR_GOOGLE_CLIENT_ID
Google__ClientSecret=YOUR_GOOGLE_CLIENT_SECRET
Google__RedirectUri=http://localhost:5000/auth/google/callback
Google__Scopes=openid email profile 

# Email Settings
EmailSettings__MailServer=smtp.gmail.com
EmailSettings__MailPort=587
EmailSettings__SenderName=SmartPly
EmailSettings__FromEmail=YOUR_EMAIL@gmail.com
EmailSettings__Password=YOUR_EMAIL_APP_PASSWORD

# URLs
FRONTEND_URL=http://localhost:5173
VITE_API_URL=http://localhost:5000
SEQ_URL=http://localhost:5341

